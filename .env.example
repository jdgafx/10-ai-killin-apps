# ==============================================
# AI Portfolio Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# ==============================================
# AI Provider API Keys (REQUIRED)
# ==============================================

# MiniMax API (Primary Provider)
# Get your API key from: https://api.minimax.chat
VITE_MINIMAX_API_KEY=sk-cp-xxxxxxxxxxxxxxxxxx

# DeepSeek API (Fallback Provider)
# Get your API key from: https://platform.deepseek.com
VITE_DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxx

# Google Gemini OAuth Client ID (Optional)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GEMINI_CLIENT_ID=xxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com

# GitHub Copilot Token (Optional)
# For code review features
VITE_GITHUB_COPILOT_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================
# Feature Flags
# ==============================================

# Enable RAG features (Document Chat, Knowledge Base)
VITE_ENABLE_RAG=true

# Enable voice features (Voice Assistant)
VITE_ENABLE_VOICE=true

# Default AI provider (minimax, deepseek, or gemini)
VITE_DEFAULT_PROVIDER=minimax

# ==============================================
# Node Environment
# ==============================================

NODE_ENV=production

# ==============================================
# Docker Registry (Optional)
# ==============================================

# Docker registry URL for pushing images
# Leave empty if not using a registry
DOCKER_REGISTRY_URL=

# ==============================================
# Database Configuration (Optional)
# ==============================================

# If using PostgreSQL for knowledge base
DATABASE_URL=postgresql://user:password@localhost:5432/ai_portfolio

# ==============================================
# Redis Configuration (Optional)
# ==============================================

# If using Redis for caching
REDIS_URL=redis://localhost:6379

# ==============================================
# Monitoring & Analytics (Optional)
# ==============================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Google Analytics ID
GOOGLE_ANALYTICS_ID=

# ==============================================
# Security
# ==============================================

# Secret key for session management
SECRET_KEY=change-this-to-a-random-string

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# ==============================================
# Rate Limiting
# ==============================================

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ==============================================
# File Upload Limits
# ==============================================

# Maximum file size for document uploads (in MB)
MAX_UPLOAD_SIZE_MB=20

# ==============================================
# AI Model Configuration
# ==============================================

# Default model for each provider
MINIMAX_DEFAULT_MODEL=minimax-abab6.5
DEEPSEEK_DEFAULT_MODEL=deepseek-chat
GEMINI_DEFAULT_MODEL=gemini-2.0-flash-exp

# Temperature settings (0.0 - 1.0)
AI_TEMPERATURE=0.7

# Max tokens for responses
AI_MAX_TOKENS=2048
